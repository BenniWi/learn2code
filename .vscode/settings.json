{
    "markdown.marp.html": "all",

    "markdown.extension.toc.levels": "1..1",
    "markdown.extension.toc.updateOnSave": false,

    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },

    "cmake.configureArgs": ["-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"],
    "cmake.options.statusBarVisibility": "compact",
    "cmake.buildDirectory": "${workspaceFolder}/build",

    "clang-format.executable": "clang-format-18",

    "clang-tidy.executable": "clang-tidy-18",
    "clang-tidy.fixOnSave": true,
    "clang-tidy.lintOnSave": false,
    "clang-tidy.buildPath": "build",
    
    "files.associations": {
        "iostream": "cpp",
        "array": "cpp",
